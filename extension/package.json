{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "jhey-dev",
  "title": "Jhey.dev",
  "description": "an extension for updating content on jhey.dev",
  "icon": "extension-icon.png",
  "author": "jhey",
  "categories": [
    "Productivity"
  ],
  "preferences": [
    {
      "name": "localRepoPath",
      "type": "directory",
      "description": "Path to your local repository",
      "required": false,
      "title": "Local Repository Path",
      "placeholder": "e.g., /Users/username/projects/my-repo"
    },
    {
      "name": "githubToken",
      "type": "password",
      "description": "GitHub Token for using API",
      "required": false,
      "title": "GitHub Token"
    }
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "add-thought",
      "title": "Add Thought",
      "description": "Commits new thoughts to your repository",
      "mode": "view"
    },
    {
      "name": "manage-thoughts",
      "title": "Manage Thoughts",
      "description": "View, edit, or delete thoughts",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.98.2",
    "@raycast/utils": "^1.17.0",
    "@types/uuid": "^10.0.0",
    "octokit": "^3.1.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
