---
// This page handles Spotify OAuth callback and displays the refresh token
import { getSecret } from 'astro:env/server'

const SPOTIFY_CLIENT_ID = getSecret('SPOTIFY_CLIENT_ID')
const SPOTIFY_CLIENT_SECRET = getSecret('SPOTIFY_CLIENT_SECRET')

let debugInfo = {
  hasClientId: !!SPOTIFY_CLIENT_ID,
  hasClientSecret: !!SPOTIFY_CLIENT_SECRET,
  url: Astro.request.url
}
---

<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Spotify OAuth Callback</title>
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      max-width: 600px;
      margin: 0 auto;
      padding: 2rem;
      line-height: 1.6;
    }
    .success {
      background: #d4edda;
      border: 1px solid #c3e6cb;
      color: #155724;
      padding: 1rem;
      border-radius: 4px;
      margin: 1rem 0;
    }
    .error {
      background: #f8d7da;
      border: 1px solid #f5c6cb;
      color: #721c24;
      padding: 1rem;
      border-radius: 4px;
      margin: 1rem 0;
    }
    .token {
      background: #f8f9fa;
      border: 1px solid #dee2e6;
      padding: 1rem;
      border-radius: 4px;
      font-family: monospace;
      word-break: break-all;
      margin: 1rem 0;
    }
    .instructions {
      background: #e2e3e5;
      border: 1px solid #d6d8db;
      color: #383d41;
      padding: 1rem;
      border-radius: 4px;
      margin: 1rem 0;
    }
    .debug {
      background: #fff3cd;
      border: 1px solid #ffeaa7;
      color: #856404;
      padding: 1rem;
      border-radius: 4px;
      margin: 1rem 0;
      font-family: monospace;
      font-size: 0.9em;
    }
    .loading {
      background: #d1ecf1;
      border: 1px solid #bee5eb;
      color: #0c5460;
      padding: 1rem;
      border-radius: 4px;
      margin: 1rem 0;
    }
  </style>
</head>
<body>
  <h1>Spotify OAuth Callback</h1>
  
  <div class="debug">
    <h3>Debug Info:</h3>
    <pre>{JSON.stringify(debugInfo, null, 2)}</pre>
  </div>
  
  <div id="result"></div>
  
  <script>
    // Client-side OAuth handling
    const urlParams = new URLSearchParams(window.location.search);
    const code = urlParams.get('code');
    const state = urlParams.get('state');
    
    const resultDiv = document.getElementById('result');
    
    if (code) {
      resultDiv.innerHTML = `
        <div class="loading">
          <h2>üîÑ Processing...</h2>
          <p>Exchanging authorization code for refresh token...</p>
        </div>
      `;
      
      // Call our API endpoint to exchange the code
      fetch('/api/spotify-token', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          code: code,
          redirect_uri: 'http://127.0.0.1:4321/callback'
        })
      })
      .then(response => response.json())
      .then(data => {
        if (data.refresh_token) {
          resultDiv.innerHTML = `
            <div class="success">
              <h2>‚úÖ Success!</h2>
              <p>Your refresh token has been generated successfully.</p>
              
              <div class="token">
                <strong>Refresh Token:</strong><br>
                ${data.refresh_token}
              </div>
              
              <div class="instructions">
                <h3>Next Steps:</h3>
                <ol>
                  <li>Copy the refresh token above</li>
                  <li>Add it to your <code>.env</code> file as:</li>
                  <li><code>SPOTIFY_REFRESH_TOKEN=${data.refresh_token}</code></li>
                  <li>Restart your development server</li>
                </ol>
              </div>
            </div>
          `;
        } else {
          resultDiv.innerHTML = `
            <div class="error">
              <h2>‚ùå Error</h2>
              <p>${data.error || 'Failed to exchange code for token'}</p>
            </div>
          `;
        }
      })
      .catch(error => {
        resultDiv.innerHTML = `
          <div class="error">
            <h2>‚ùå Error</h2>
            <p>Error: ${error.message}</p>
          </div>
        `;
      });
    } else {
      resultDiv.innerHTML = `
        <div class="instructions">
          <h2>No OAuth Code Found</h2>
          <p>This page is for handling Spotify OAuth callbacks. If you're seeing this, you may have navigated here directly.</p>
          <p>To get a refresh token, you need to:</p>
          <ol>
            <li>Go to your Spotify Developer Dashboard</li>
            <li>Add <code>http://127.0.0.1:4321/callback</code> to your app's Redirect URIs</li>
            <li>Use the authorization URL from the Spotify auth script</li>
          </ol>
        </div>
      `;
    }
  </script>
</body>
</html> 