---
import Analytics from '@vercel/analytics/astro'
import { injectSpeedInsights } from '@vercel/speed-insights'
import { clsx } from 'clsx'
import { Font } from 'astro:assets'
import Status from '../components/Status.astro'
import Signature from '../components/Signature.astro'
import Header from '../components/Header.astro'
import StatusFallback from '../components/StatusFallback.astro'
import '../styles/global.css'
const title = 'Jhey Tompkins'
const ogImageUrl = 'https://jhey.vercel.app/api/og'
// inject scripts
injectSpeedInsights()
---

<!doctype html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="utf-8" />
    <meta
      name="description"
      property="og:description"
      content="Making your ideas click. Jhey Tompkins is the one who crafts. Design Engineer, Craftsman, Speaker, Educator."
    />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="theme-color" content="#000" />
    <link rel="manifest" href="/manifest.json" />
    <link
      rel="icon"
      href="/icons/favicon-32x32.png"
      type="image/png"
      sizes="16x16"
    />
    <link rel="shortcut icon" href="/icons/favicon-32x32.png" />
    <link rel="apple-touch-icon" href="/icons/apple-touch-icon.png" />
    <link rel="icon" type="image/svg+xml" href="/icons/favicon.svg" />
    <meta name="generator" content="Astro" />
    <meta property="og:site_name" content={title} />
    <meta property="og:title" content={title} />
    <meta name="author" content="Jhey Tompkins" />
    <meta name="image" content={ogImageUrl} />
    <meta name="image" property="og:image" content={ogImageUrl} />
    <meta name="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://jhey.dev/" />
    <meta name="twitter:title" content="Jhey Tompkins" />
    <meta
      name="twitter:description"
      content="Design Engineer, Craftsman, Speaker, Educator."
    />
    <meta name="twitter:image" content={ogImageUrl} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:creator" content="@jh3yy" />
    <Font cssVariable="--font-sans" preload />
    <Font cssVariable="--font-serif" preload />
    <Font cssVariable="--font-mono" preload />
    <Analytics />
  </head>
  <body class="font-sans min-h-screen">
    <nav class="p-2 top-0 bg-bg fixed">
      <a
        class="w-10 h-10 text-text-1 grid place-items-center rounded-md hover:text-[canvasText]"
        href="/"
      >
        <svg
          class="w-[85%]"
          viewBox="0 0 969 955"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <circle
            cx="161.191"
            cy="320.191"
            r="133.191"
            stroke="currentColor"
            stroke-width="20"></circle>
          <circle
            cx="806.809"
            cy="320.191"
            r="133.191"
            stroke="currentColor"
            stroke-width="20"></circle><circle
            cx="695.019"
            cy="587.733"
            r="31.4016"
            fill="currentColor"></circle><circle
            cx="272.981"
            cy="587.733"
            r="31.4016"
            fill="currentColor"></circle><path
            d="M564.388 712.083C564.388 743.994 526.035 779.911 483.372 779.911C440.709 779.911 402.356 743.994 402.356 712.083C402.356 680.173 440.709 664.353 483.372 664.353C526.035 664.353 564.388 680.173 564.388 712.083Z"
            fill="currentColor"></path><rect
            x="310.42"
            y="448.31"
            width="343.468"
            height="51.4986"
            fill="#FF1E1E"></rect><path
            fill-rule="evenodd"
            clip-rule="evenodd"
            d="M745.643 288.24C815.368 344.185 854.539 432.623 854.539 511.741H614.938V454.652C614.938 433.113 597.477 415.652 575.938 415.652H388.37C366.831 415.652 349.37 433.113 349.37 454.652V511.741L110.949 511.741C110.949 432.623 150.12 344.185 219.845 288.24C289.57 232.295 384.138 200.865 482.744 200.865C581.35 200.865 675.918 232.295 745.643 288.24Z"
            fill="currentColor"></path></svg
        >
        <span class="sr-only">jhey.dev</span></a
      >
    </nav>
    <div
      class={clsx(
        'motion-safe:animate-[reveal_0.35s_ease-out_0.5s_both]',
        '[--translate-from-y:1rem]',
        'w-content mx-auto flex-1 flex flex-col justify-center items-start max-w-max-content',
        'py-20'
      )}
    >
      <Header />
      <main>
        <div
          class={clsx(
            '[&_p]:mb-4 [&_p:last-of-type]:italic'
          )}
        >
          <slot />
          <Signature />
        </div>
        
        <div class="mt-6 relative">
          <Status server:defer>
            <Status mock slot="fallback" />
          </Status>
        </div>
      </main>
    </div>
  </body>
</html>
